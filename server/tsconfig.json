{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": ".",
		"allowJs": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"ts-node": {
		"esm": true,
		"transpileOnly": true,
		"compilerOptions": {
			"module": "NodeNext",
			"moduleResolution": "NodeNext"
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist"]
}